<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="6dp"
        card_view:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/itemNames"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp"
                android:text="Item Name :"
                android:textAppearance="@style/TextAppearance.AppCompat" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView7"
                android:layout_toStartOf="@+id/iteminuse"
                android:text="Tag In use :   "
                android:textAppearance="@style/TextAppearance.AppCompat" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView14"
                android:layout_alignTop="@+id/textView"
                android:text="Priority :   "
                android:textAppearance="@style/TextAppearance.AppCompat" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView"
                android:layout_alignTop="@+id/itemstatus"
                android:text="Status :"
                android:textAppearance="@style/TextAppearance.AppCompat" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/textView"
                android:layout_marginBottom="44dp"
                android:text="Description :"
                android:textAppearance="@style/TextAppearance.AppCompat" />

            <TextView
                android:id="@+id/itemNames"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="102dp"
                android:layout_marginTop="21dp"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans_light"
                android:text="TextView"
                android:textAppearance="@style/TextAppearance.AppCompat" />

            <TextView
                android:id="@+id/itemPrority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/textView"
                android:layout_marginEnd="48dp"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans_light"
                android:text="TextView"
                android:textAppearance="@style/TextAppearance.AppCompat" />

            <TextView
                android:id="@+id/iteminuse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/itemPrority"
                android:layout_alignTop="@+id/textView7"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans_light"
                android:text="TextView"
                android:textAppearance="@style/TextAppearance.AppCompat" />

            <TextView
                android:id="@+id/itemstatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/itemNames"
                android:layout_marginTop="57dp"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans_light"
                android:text="TextView"
                android:textAppearance="@style/TextAppearance.AppCompat" />

            <TextView
                android:id="@+id/itemdescription"
                android:layout_width="187dp"
                android:layout_height="51dp"
                android:layout_alignTop="@+id/textView11"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans_light"
                android:text="TextView"
                android:textAppearance="@style/TextAppearance.AppCompat" />

            <ImageButton
                android:id="@+id/mandatroeyoptionsbtn"
                android:layout_width="15dp"
                android:layout_height="29dp"
                android:layout_alignBottom="@+id/textView"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="12dp"
                android:background="@null"
                android:contentDescription="@string/popupoptions"
                android:scaleType="centerCrop"
                android:src="@drawable/icondots" />

            <TextView
                android:id="@+id/tagid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/textView"
                android:text="TextView"
                android:visibility="invisible" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>